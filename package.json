{
	"name": "notes-box",
	"displayName": "Notes Box",
	"description": "Manage your custom code snippets and notes on VS Code with no pain.",
	"version": "0.0.5",
	"publisher": "mateussouzaweb",
	"license": "SEE LICENSE IN LICENSE.md",
	"homepage": "https://github.com/mateussouzaweb/vscode-notes-box/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/mateussouzaweb/vscode-notes-box"
	},
	"bugs": {
		"url": "https://github.com/mateussouzaweb/vscode-notes-box/issues",
		"email": "mateussouzaweb@gmail.com"
	},
	"icon": "media/logo.png",
	"main": "./out/extension.js",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"extensionKind": [
		"workspace",
		"ui"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notesBox",
					"title": "Notes Box",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"notesBox": [
				{
					"id": "notesExplorer",
					"name": "Explorer",
					"icon": "media/icon.svg",
					"contextualTitle": "Notes Box"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "notesExplorer",
				"contents": "No notes found.\n[Create First Note](command:notesExplorer.addFile)\n[Configure Location](command:notesExplorer.settings)"
			}
		],
		"commands": [
			{
				"command": "notesExplorer.refreshExplorer",
				"category": "Notes Box",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "notesExplorer.addFile",
				"category": "Notes Box",
				"title": "New File",
				"icon": "$(new-file)"
			},
			{
				"command": "notesExplorer.addFolder",
				"category": "Notes Box",
				"title": "New Folder",
				"icon": "$(new-folder)"
			},
			{
				"command": "notesExplorer.deleteFile",
				"category": "Notes Box",
				"title": "Delete File",
				"icon": "$(trash)"
			},
			{
				"command": "notesExplorer.deleteFolder",
				"category": "Notes Box",
				"title": "Delete Folder",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "notesExplorer.refreshExplorer",
					"when": "view == notesExplorer",
					"group": "navigation"
				},
				{
					"command": "notesExplorer.addFile",
					"when": "view == notesExplorer",
					"group": "navigation"
				},
				{
					"command": "notesExplorer.addFolder",
					"when": "view == notesExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "notesExplorer.deleteFile",
					"group": "navigation@2",
					"when": "view == notesExplorer && viewItem == file"
				},
				{
					"command": "notesExplorer.addFile",
					"group": "navigation",
					"when": "view == notesExplorer && viewItem == folder"
				},
				{
					"command": "notesExplorer.addFolder",
					"group": "navigation",
					"when": "view == notesExplorer && viewItem == folder"
				},
				{
					"command": "notesExplorer.deleteFolder",
					"group": "navigation@2",
					"when": "view == notesExplorer && viewItem == folder"
				}
			]
		},
		"configuration": [
			{
				"title": "Notes Box",
				"properties": {
					"notesbox.location": {
						"markdownDescription": "Set the path of your notes or snippets folder location. Ex: ``~/Notes/``",
						"type": "string"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	}
}
